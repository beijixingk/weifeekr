.register-wrap {
    width: 100%;
    overflow: hidden;
}
.back-title {
    text-align: center;
    position: relative;
    padding: 20rpx;
    font-size: 34rpx;
    background: #fff;
}
.body-space-large {
    padding: 25rpx;
}
.register-wrap .info {
    padding-top: 20rpx;
    font-size: 24rpx;
    text-align: center;
    color: #666;
}
.register-wrap .input-wrap {
    padding: 6rpx 20rpx;
    background: #fff;
    font-size: 24rpx;
    margin-bottom: 15rpx;
}
.register-wrap .input-wrap {
    padding: 6rpx 20rpx;
    background: #fff;
    font-size: 24rpx;
    margin-bottom: 15rpx;
}

.register-wrap .reg-submit, .register-wrap .reg-finish-submit {
    padding: 10rpx 0;
    font-size: 28rpx;
    width: 100%;
    border-radius: 15rpx;
    margin-top: 20rpx;
}
.register-wrap .input-wrap .iconfont {
    color: #999;
    vertical-align: bottom;
    margin: 10rpx 0;
}
.hide {
    display: none;
}
.register-wrap .reg-input {
    width: 85%;
    padding: 10rpx 0;
    font-size: 24rpx;
    margin-left: 10rpx;
    display: inline-block;
    vertical-align: bottom;
}
.submit-btn {
    display: block;
    color: #fff;
    font-size: 32rpx;
    background: #1abc9c;
    width: 100%;
    text-align: center;
}
.normal {
    color: #1abc9c;
}
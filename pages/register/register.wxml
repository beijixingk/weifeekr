<!--pages/register/register.wxml-->

<view class="inner-wrap register-wrap">
  <view class="back-title">
    <text class="style-title">注册</text>
  </view>
  <view class="reg-container body-space-large">
    <form bindsubmit="formSubmit" class="reg-form">
      <view class="username-wrap input-wrap">
        <mp-icon icon="me" extClass="iconfont icon-yonghu" />
        <input type="text" class="hide"/>
        <input type="text" name="username" class="account reg-input" placeholder="请输入手机号码" data-type="cellphone"/>
      </view>
      <view class="password-wrap input-wrap">
        <mp-icon icon="lock" extClass="iconfont icon-mima" />
        <input type="password" class="hide"/>
        <input name="psw" type="password" class="pwd reg-input" placeholder="请设置密码（6位数以上数字或字母）" data-type="password"/>
      </view>
      <button formType="submit" class="reg-submit submit-btn">注册</button>
    </form>
    <view class="policy info">您已同意并愿意遵守Feekr的
      <text class="normal policy-btn">用户协议</text>.</view>
  </view>
</view>
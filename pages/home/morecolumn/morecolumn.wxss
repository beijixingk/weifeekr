/* pages/home/morerecolumn/morecolumn.wxss */
.morecolumn{
  width: 100%;
  height: 100%;
}
.column-container{
  padding: 14px 11px;
  border-top: 1px solid #F2F2F2;
  border-bottom: 0;
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap;
}
.column-item{
  position: relative;
  width: 49%;
  background: #000;
  margin-bottom: 10px;
  margin-top: 0;
  padding: 0;
  text-align: center;
}
.column-item:nth-child(2n) {
    margin-left: 2%;
}
.column-item image{
  opacity: .6;
  width: 100%;
  height: 97.33px;
  margin-bottom: -6px;
}
.column-item .column-title{
  color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
}
.column-head{
  background: #fff;
  border-bottom: 1px solid #e8e8e8;
}
.column-head .head-top{
  background: #f6f6f6;
  overflow: hidden;
  height: 192px;
  width: 100%;
}
.head-top image{
  width: 100%;
  height: 100%;
  display: block;
}
.head-bottom{
  width: 100%;
  text-align: center;
  margin-top: -40px;
  padding-bottom: 25px;
  position: relative;
  padding: 10px;
}
.head-author{
  text-align: center;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  padding: 2px;
  background: #fff;
  position: relative;
  vertical-align: middle;
  margin:  0 auto;
}
.author-img{
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 50%;
}
.author-img image{
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 50%;

}
.author-name{
  text-align: center;
  padding-top: 10px;
  line-height: 1.8;
  font-size: 16px;
  color: #2d2d2d;
}
.btn{
  display: inline-block;
  margin-top: 25px;
  padding: 5px 30px;
  color: #1abc9c;
  border: 1px solid #1abc9c;
  font-size: 14px;
  border-radius: 30px;
}
/* column-list */
.column-tab{
  width: 100%;
  height: 100%;
  background: #f6f6f6;
  text-align: center;
  padding: 25px;
  color: #999;
  display: flex;
  flex-direction: row;
  flex: 1;
  padding-left: 87px;
}
.column-tab .tab{
  width: 40px;
  padding: 0 20px;
}
.active{
  color: #2d2d2d !important; 
}

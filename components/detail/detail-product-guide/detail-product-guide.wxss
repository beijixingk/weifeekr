/* components/detail/detail-product-guide/detail-product-guide.wxss */
.product-guide {
    box-sizing: border-box;
    padding: 38rpx 42rpx 60rpx;
    margin-top: 26rpx;
    background-color: #fff;
}
.product-guide image {
    display: block;
    margin: 0 auto;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.product-guide  .userhead{
    margin: 24rpx 20rpx;
    font-size:20rpx;
    color: #9b9b9b;
    text-align: center;
}
.product-guide .h4 {
    font-weight: bold;
    text-align: center;
    font-size: 26rpx;
}
.product-guide .h5 {
    position: relative;
    margin-top:50rpx;
    box-sizing: border-box;
    padding: 16rpx 20rpx;
    font-size: 26rpx;
    line-height: 50rpx;
    color: #282828;
    background-color: #f5f5f5;
}
/* components/guide/guide-recommend/guide-recommend.wxss */
.season-recommend {
  background: #fff;
  margin-top: 24rpx;
  width:100%;
}
.header-title-wrap {
  color: #2D2D2D;
  padding: 36rpx 0;
  line-height: 1.8;
  width: 100%;
  text-align: center;
}
.section-title {
  vertical-align: middle;
}
.season-recommend .item-container {
  border-bottom: 1rpx solid #F6F6F6;
  padding: 24rpx;
  padding-top: 0;
  padding-bottom: 0;
  display: flex;
  flex-wrap: wrap;
}
.item-container .item {
  width: 48.5%;
  margin-left: 3%;
  margin-bottom: 36rpx;
  line-height: 1.8;
}
.item-container .item:nth-child(odd) {
  margin-left: 0;
}
.item-container .item image {
  width: 100%;
  max-height:216rpx;
}
.item-container .item .item-title {
  color: #2D2D2D;
  padding: 12rpx 0 0;
  text-align: center;
  font-size: 28rpx;
}
.item-container .city-desc {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: #666;
  text-align: center;
  font-size: 26rpx;
}
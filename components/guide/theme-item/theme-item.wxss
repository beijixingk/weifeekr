/* components/guide/theme-item/theme-item.wxss */

.theme-item {
  position: relative;
  padding: 0;
  min-height: 200rpx;
  margin: 36rpx 0 48rpx;
  border-bottom: 1px solid #e5e5e5;
  display: block;
  margin-bottom: 0;
  background-color: transparent;
}
.thumb-wrap {
  margin: 0;
  overflow: hidden;
  width: 100%;
}
.thumb-wrap image{
  max-height: 22.4vh;
  width: 100%;
  border:0;
}
.theme-item .theme-desc {
  position: absolute;
  color: #fff;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  width: 80%;
  z-index: 2;
  text-align: center;
}
.theme-item .content {
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}
.theme-item .style-tag {
  color: #fff;
  font-size: 26rpx;
  margin-top: 24rpx;
}
.style-tag span {
  padding: 12rpx;
  padding-left: 0;
  padding-right: 0;
}
.margin-top{
  margin-top: 0;
}
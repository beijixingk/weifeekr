/* components/homeComponents/loading/loading.wxss */
.loading{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 998;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.7);
}
.loading-main{
  position: fixed;
  left: 50%;
  top: 50%;transform: translate(-50%, -50%);
  z-index: 999;
}
.spinner{
  height: 40px;
  text-align: center;
  font-size: 8px;
}
.spinner > view{
  background-color: #1abc9c;
  height: 100%;
  width: 6px;
  display: inline-block;
  margin:1px;
}
.react1{
  animation:load 1s infinite 0.3s;
}
.react2{
  animation:load 1s infinite 0.6s;
}
.react3{
  animation:load 1s infinite 1s;
}
@keyframes load{
  0%{
    transform:scaleY(0.5)
  }
  50%{
    transform:scaleY(1)
  }
  100%{
    transform:scaleY(0.5)
  }
}
.text{
  text-align: center;
  color: #fff;
  padding: 5px;
}

